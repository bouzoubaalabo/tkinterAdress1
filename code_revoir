        "id": idSelect,
        "name": nameSelect,
        "phone": phoneSelect,
        "more_info": moreInfoSelect
    }

    # Ouvrir la fenêtre de paiement avec le client sélectionné
    payment_window.show_payment_window(selected_customer)

